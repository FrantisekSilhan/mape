@page
@model LoginProject.Areas.Admin.Pages.Posts.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Post</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Input.PostId" />
            <div class="form-group">
                <label asp-for="Input.Content" class="control-label"></label>
                <input asp-for="Input.Content" class="form-control" />
                <span asp-validation-for="Input.Content" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.AuthorId" class="control-label"></label>
                <select asp-for="Input.AuthorId" class="form-control" asp-items="ViewBag.AuthorId"></select>
                <span asp-validation-for="Input.AuthorId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
